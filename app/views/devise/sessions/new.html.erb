<div class="min-h-screen bg-gray-50 flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-sm">
    <div class="flex justify-center mb-6">
      <div class="bg-indigo-500 w-12 h-12 rounded-full flex items-center justify-center">
        <span class="text-white text-2xl font-bold">ðŸ“˜</span>
      </div>
    </div>

    <h2 class="text-center text-xl font-bold text-gray-900 mb-2">
      Welcome to Reading Circle
    </h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Enter your email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Enter your password" %>
      </div>

      <div class="field mt-2">
        <%= f.submit "Sign in", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>
      <p class="text-center text-sm text-gray-500 mb-6">
        not signed up yet? <a href="#" class="text-indigo-600 hover:text-indigo-500">Sign up</a>
      </p>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>
    <% end %>
  </div>
</div>