<aside class="w-56 shrink-0 border-r bg-white">
  <div class="flex items-center h-16 px-6 font-semibold">
  <%= link_to root_path, class: "flex items-center space-x-2" do %>
    <span class="inline-block w-3 h-3 rounded-full bg-indigo-600"></span>
    <span>READING CIRCLE</span>
  <% end %>
  </div>
  <nav class="mt-6">
    <ul class="space-y-1 text-sm">
      <li>
        <%= link_to root_path,
                    class: "flex w-full items-center px-6 py-3 font-medium text-indigo-600 bg-indigo-50 rounded-r-lg" do %>
          Dashboard
        <% end %>
      </li>
      <li>
        <%= link_to groups_path,
                    class: "block px-6 py-3 hover:bg-gray-50 rounded-r-lg" do %>
          Reading Groups
        <% end %>
      </li>
      <li>
        <%= link_to assignments_path,
                    class: "block px-6 py-3 hover:bg-gray-50 rounded-r-lg" do %>
          Assignments
        <% end %>
      </li>
      <li>
        <%= link_to root_path,
                    class: "block px-6 py-3 hover:bg-gray-50 rounded-r-lg" do %>
          Profile
        <% end %>
      </li>
    </ul>
  </nav>
  <div class="px-6 py-4 border-t">
    <div class="relative">
      <input type="checkbox" id="user-menu-toggle" class="peer hidden">
      <label for="user-menu-toggle" class="flex items-center space-x-3 cursor-pointer">
        <div class="w-8 h-8 rounded-full bg-gray-300"></div>
        <div class="text-sm font-medium text-gray-800 break-all">
          <%= current_user.email %>
        </div>
      </label>
      <div class="mt-2 peer-checked:block hidden">
        <%= form_with url: destroy_user_session_path, method: :delete, local: true do %>
          <%= submit_tag "Logout", class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-md" %>
        <% end %>
    </div>
  </div>
</aside>
